# Environment Variables for GRU Ecosystem

# Node.js environment
NODE_ENV=production

# Azure Deployment
AZURE_WEBAPP_NAME=your-app-name
AZURE_SLOT_NAME=production
AZURE_WEBAPP_PUBLISH_PROFILE=${{ secrets.AZURE_WEBAPP_PUBLISH_PROFILE }}

# Database Configuration
DB_HOST=your-database-host
DB_PORT=5432
DB_USER=your-database-user
DB_PASSWORD=your-database-password
DB_NAME=your-database-name

# API Keys and Secrets
API_KEY=your-api-key
SECRET_KEY=your-secret-key

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-project-id
BSC_RPC_URL=https://bsc-dataseed.binance.org/
POLYGON_RPC_URL=https://polygon-rpc.com/
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Governance and Security
GOVERNANCE_CONTRACT_ADDRESS=your-governance-contract-address
SECURITY_AUDIT_API_KEY=your-security-audit-api-key

# DeFi Protocols
DEFI_PROTOCOL_API_URL=https://api.defi-protocol.com
DEFI_PROTOCOL_API_KEY=your-defi-protocol-api-key

# Monitoring and Performance
PERFORMANCE_METRICS_API_URL=https://api.performance-metrics.com
PERFORMANCE_METRICS_API_KEY=your-performance-metrics-api-key

# Compliance and Legal
KYC_API_URL=https://api.kyc-provider.com
KYC_API_KEY=your-kyc-api-key
AML_API_URL=https://api.aml-provider.com
AML_API_KEY=your-aml-api-key

# Wallet Integration
METAMASK_SNAP_URL=https://metamask.io/snap
TRUST_WALLET_API_URL=https://api.trustwallet.com
COINBASE_WALLET_API_URL=https://api.coinbase.com

# Miscellaneous
LOG_LEVEL=info
PORT=3000
